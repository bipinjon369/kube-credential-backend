    {
  "compilerOptions": {
    "outDir": "./dist", // Root output directory
    "resolveJsonModule": true, // Allow importing JSON files
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["../../lib/src/*"],
      "@handlers/*": ["src/handlers/*"],
      "@utils/*": ["src/utils/*"]
    },
    "skipLibCheck": true, // Skip type checking for 'lib'
    "incremental": true, // Enables incremental compilation
    "esModuleInterop": true, // Enables compatibility with CommonJS modules
    "noEmitOnError": false, // Continue compilation even with errors
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/test-setup.ts"]
}
